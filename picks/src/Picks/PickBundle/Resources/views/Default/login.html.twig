{% block stylesheets %}
    <link href="{{ asset ('css/default.css') }}" type="text/css" rel="stylesheet" />
{% endblock %}
<html lang="en" class="no-js">
	<head>
        <title>{% block title %}Login{% endblock %}</title>
	</head>
	<body>
		<div id="login">
			<div id="box">
				<form method="post" action="">
					<p>
						<input class="login" id="Email" name="email" type="text" placeholder="Email" ><br> <!-- Username input box -->
						<input class="login" id="Password" name="password" type="password" placeholder="Password"><br> <!-- Password input box -->
						<button type="submit" name="submit" class="login button">Login</button> <!-- Login (submit) button -->
					</p>
				</form>
                {% if error is defined %}<h4 class='alert'>{{ error }}</h4>{% endif %}
			</div>
		</div><!-- end login -->
	</body>
</html>
