<html lang="en" class="no-js">
	<head>
        {% block stylesheets %}
            {% stylesheets 'bundles/personal/css/picks/default.css' filter='cssrewrite' %}
                <link rel="stylesheet" href="{{ asset_url }}" />
            {% endstylesheets %}
        {% endblock %}
        <title>{% block title %}Coding Bat Ripoff{% endblock %}</title>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
	</head>
	<body style="font-family:Helvetica">
    <div name="logout" style="display:inline-block;float:right;">
        <a href={{ path("compiler_logout") }}>
            <button class="login" style="width:80px;height:40px">Logout</button>
        </a>
    </div>
    <div name="header">
        <h2>CodingBat (Ripoff)</h2>
    </div>
    {% for title in titles %}
        <p>
            <a href={{ path("compiler_problem", { 'problem': ids[loop.index0] }) }}>{{ title }}</a>
        </p>
    {% endfor %}
	</body>
    {% block javascripts %}
        {% javascripts 'bundles/personal/js/code.js'%}
            <script src="{{ asset_url }}"></script>
        {% endjavascripts %}
    {% endblock %}
</html>
